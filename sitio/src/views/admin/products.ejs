    <header class="cont-header2">

        <div class="contenedor-padre">
            <div class="logo">
                <a href="/"><img src="/images/giveOneTNC.png" width="150px" alt=""></a>
            </div>
            <div class="iconos-navegador">

                <div class="iconos-buscador">
                    <a href="/users/registro">
                        <p class="texto"><i class="fas fa-sign-in-alt"></i>Registrarme</p>
                    </a>
                    <a href="/users/login">
                        <p class="texto"><i class="fas fa-user-alt"></i>Mi cuenta</p>
                    </a>
                    <div class="iconos">
                        <div class="buscador-ip">
                            <input class="buscar" type="text" >
                            <button class="botonn">
                                <i class="fas fa-search"></i>
                            </button>
                            <i class="far fa-heart"></i>
                        <a class="cora" href="/cart"><i class="fas fa-shopping-bag"></i></a>
                    </div>
                </div>
                </div>
                <div class="navegador">
                    <p class="categoria">CUBIERTOS</p>
                    <P class="categoria">VAJILLA</P>
                    <p class="categoria">CRISTALERÍA</p>
                    <p class="categoria">CAFÉ Y TÉ</p>
                    <p class="categoria">CONTACTO<i class="far fa-question-circle"></i></p>

                </div>

            </div>
        </div>
        <div class="envio">
            <p>ENVÍO GRATIS EN COMPRAS MAYORES A $5.000</p>
        </div>

    </header>

    <main class="cont-main">

        <p class="ofertax">Lista de productos</p>
        <section class="product">

            <% products.forEach(product => { %>
                <div class="contenedor-pro">
                    <article class="uno">
    
                        <img src="/images/<%= product.image %>" alt="<%= product.name %>">
                        <div class="fav1">
                            <i class="far fa-heart"></i>
                            </div>
                        <div class="data-product">
                            <h4><%= product.name %></h4>
                            <p>$<%= product.price %></p>
                            <br>
                            <div class="buttons">
                                <a href="/admin/edit/<%= product.id %>" class="registrar-btn">
                                    <button class="btn-g" type="button">Editar</button>
                                </a>
                                <form action="/admin/delete/<%= product.id %>?_method=DELETE" method="POST" class="registrar-btn">
                                    <button class="btn-g" type="submit">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </article>
                </div>
            <% }) %>

        </section>

    </main>

    <footer>

        <section class="listas">

            <div class="contenedor-navegacion">
                <a href="" class="texto-principal">NAVEGACIÓN</a>
