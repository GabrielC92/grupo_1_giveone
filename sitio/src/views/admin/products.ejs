<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="detail">
    <%- include('../partials/header') %>

    <main class="registro">

        <p class="ofertax">Lista de productos</p>
        <section class="product">

            <% products.forEach(product => { %>
                <div>
                    <article>
    
                        <img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
                        <div class="fav1">
                            <i class="far fa-heart"></i>
                            </div>
                        <div class="data-product">
                            <h4><%= product.name %></h4>
                            <p>$<%= product.price %></p>
                            <br>
                            <div class="buttons">
                                <a href="/admin/edit/<%= product.id %>" class="registrar-btn">
                                    <button class="btn-g" type="button">Editar</button>
                                </a>
                                <form action="/admin/delete/<%= product.id %>?_method=DELETE" method="POST" class="registrar-btn">
                                    <button class="btn-g" type="submit">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </article>
                </div>
            <% }) %>

        </section>

    </main>

    <%- include('../partials/footer') %>
</body>
</html>