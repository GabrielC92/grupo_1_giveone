<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head',{title: "Agregar producto"}) %>
<body class="register">
    
    <%- include('../partials/header') %>

    <main class="registro">
        <section class="titular">
            <h2 class="titulo">Carga de nuevo producto</h2>
            
            <div class="box-img"><img class="coffee" src="/images/mug_coffee_PNG97438.png" alt="coffee"></div>
        </section>
        <form class="log" action="" method="POST" enctype="multipart/form-data">
            <input class="input-g" type="text" name="name" placeholder="Nombre" required>
            
            <textarea class="input-g" name="description" placeholder="Descripción" cols="20" rows="5" required></textarea>
            
            <input class="input-g" type="number" name="price" placeholder="Precio" required>

            
           <!--  <input class="input-g" type="text" name="categoryId" placeholder="categoría" required> -->
           
           <select  class="input-g" name="categoryId" id="categoria" class="form-select">
               <option value="" selected hidden>Seleccione la categoría</option>
               <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.id %>" <%= locals.old && old.categoria.name === categoria.name ? 'selected' : null %> ><%= categoria.name %> </option>
               <% }) %>
           </select>
           <span class="text-danger small"><%= locals.errores && errores.categoria ? errores.categoria.msg : null %> </span>
            
            <input class="input-g" type="file" name="image" multiple accept="image/*">
            
            <div class="r-btn">
                <button class="btn-g" type="submit">Agregar producto</button>
            </div>
        </form>
    </main>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts') %>
</body>
</html>