            <img src="/images/SETT.jpg" alt="">
        </div>

        <p class="ofertax">PRODUCTOS MÁS VENDIDOS</p>
        <section class="product">

            <% products.forEach(product => { %>
                <div>
                    <% if (product.id == 2) { %>
                        <article class="dos">
                    <% } else { %>
                        <article class="cuatro">
                    <% } %>
                        <img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
                        <% if (product.category == "Nuevo") { %>
                            <p class="of4">Nuevo</p>
                        <% } else if (product.category == "Envío Gratis") { %>
                            <p class="of2">Envío Gratis</p>
                        <% } else { %>
                         <br>
                        <% } %>
                        <div class="fav4">
                            <i class="far fa-heart"></i>
                            </div>
                        <div class="data-product">
                            <h4><%= product.name %></h4>
                            <p>$<%= product.price %></p>
                            <br>
                            <a href="/producto/<%= product.id %>" class="vermas"> <input type="buttom" name="Vermas" id="VerMas"
                                    class="ver-inp">VER MÁS</a>
                        </div>
                    </article>
                </div>
            <% }) %>
        </section>
        <span>
            <img src="/images/OFERTA2.gif" alt="" srcset="">

