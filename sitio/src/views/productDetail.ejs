<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<body class="detail">
    <%- include('partials/header') %>

    <main class="detalle">
            <div class="product">
                <div class="name-favorit">
                    <h3 class="name"><%= product.name %></h3>
                    <a href=""><i class="far fa-heart"></i></a>
                </div>
                <div class="photo-description">
                    <section class="photo">
                        <img src="/images/products/<%= product.image %>" alt="<%= product.name %>">
                    </section>
                    <section class="descripcion">
                        <div class="codigo-producto">
                            <span>EJ1234</span>
                        </div>
                        <div class="precio">
                            <span class="price">$<%= product.price %></span>
                            <!-- parte estática de 2° sprint id = 4 -->
                            <span class="descuento">$1.500</span>
                            <span class="img-desc">50% </span>
                            <!-- END parte estática de 2° sprint -->
                        </div>
                        <div class="cuotas-tarjeta">
                            <section class="cuotas">
                                <span>6 cuotas sin interes abonando con</span>
                            </section>
                            <section class="tarjeta">
                                <img src="https://statics.glamit.com.ar/skin/frontend/default/volf/images/iconos/tarjetas.svg" width="150px" alt="">
                            </section>
                        </div>
                        <div class="cantidad-productos">
                            <div class="addCantidad">
                                <span id="minus" class="cant1" title="Menos">-</span>
                                <input id="input-quantity" class="input-text qty" readonly="readonly" type="text" name="qty" value="1" data-max="20">
                                <span id="add" class="cant" title="Más">+</span>
                            </div>
                        </div>
                        <div class="favoritos-boton">
                            <button type="submit">Agregar al carrito</button>
                        </div>
                    </div>
                <div class="parrafo">
                    <div class="detalles">
                        <h3>descripcion</h3>
                        <p><%= product.description %></p>
                    </div>
                </div>
                </section>
            </div>
    </main>    
    <%- include('partials/footer') %>
    <%- include('partials/scripts') %>
</body>
</html>
