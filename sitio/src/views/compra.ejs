<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head') %>

<body class="compra">
  <%- include('partials/header') %>

  <main>
    <ul id="progressbar">
      <li class="cart"><a href="/cart">Carrito(3)</a></li>
      <li class="pagos"><a href="/formasDePago">Metodo de Pago</a></li>
      <li class="finalizar"><a href="/">Finalizar</a></li>
    </ul>
    <div class="contenedor">

      <div class="contenido-padding">

        <div class="contenido-general">
          <h2>Sus datos de pago</h2>

          <form>
            <ul class="form-list">
              <li class="opciones">
                <label>Nombre y Apellido</label>
                <input type="text" name="" autocomplete="off"/>
              </li>
              <li class="opciones">
                <label>Número de Tarjeta</label>
                <div class="input-card">
                  <input type="text" name="cc_number" autocomplete="off"/>
                  <i class="fas fa-credit-card"></i>
                </div>
              </li>
              <li class="datos-card">
                <div>
                  <label>FECHA DE EXPIRACIÓN</label>
                  <div class="input-datos">
                    <input type="text" name="cc_month" placeholder="MM"autocomplete="off" />
                    <input class="aaa" type="text" name="cc_year" placeholder="AA" autocomplete="off"/>
                  </div>
                </div>
                <div class="input-datos">
                  <input type="text" name="cvc" placeholder=" CVC 123" autocomplete="off"/>
                </div>
              </li>
              <li class="guardar-card">
                <label>
                  <input type="checkbox" name="save_cc" checked="checked" autocomplete="off">
                  Guardar mi tarjeta para futuras compras
                </label>
              </li>
              <div class="boton">
                <span id="span1"></span>
                <span id="span2"></span>
                <span id="span3"></span>
                <span id="span4"></span>
                <a href="/">
                  <button type="button">PAGAR AHORA</button>
                </a>
              </div>
            </ul>
          </form>

        </div> <!-- END: .contenido-general -->
      </div> <!-- END: .contenido-padding -->
    </div> <!-- END: .contenedor -->
  </main>

  <%- include('partials/footer') %>
  <%- include('partials/scripts') %>
</body>

</html>