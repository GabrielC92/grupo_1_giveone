    <div class="contenedor">

      <div class="contenido-padding">

        <div class="contenido-general">
          <h2>Sus datos de pago</h2>

          <form>
            <ul class="form-list">
              <li class="opciones">
                <label>Nombre y Apellido</label>
                <input type="text" name="" />
              </li>
              <li class="opciones">
                <label>Número de Tarjeta</label>
                <div class="input-card">
                  <input type="text" name="cc_number" />
                  <i class="fas fa-credit-card"></i>
                </div>
              </li>
              <li class="datos-card">
                <div>
                  <label>FECHA DE EXPIRACIÓN</label>
                  <div class="input-datos">
                    <input type="text" name="cc_month" placeholder="MM" />
                    <input type="text" name="cc_year" placeholder="AA" />
                  </div>
                </div>
                <div>
                  <label>
                    CVC
                  </label>
                  <input type="text" name="cvc" placeholder="123" />
                </div>
              </li>
              <li class="guardar-card">
                <label>
                  <input type="checkbox" name="save_cc" checked="checked">
